@model Product
<!DOCTYPE html>
<html>
    <head>
        <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet"/>
    </head>
    <body>
        <h6 class="bg-secondary text-white text-center m-2 p-2">Watersports Table</h6>
        <div class="m-2">
            <table class="table table-striped table-bordered table-sm">
                <tbody>
                    <tr><th>Name</th><td>@Model.Name</td></tr>
                <tr><th>Price</th><td>@Model.Price.ToString("c")</td></tr>
                <tr><th>Tax</th><td>@Model.Price * 0.2m</td></tr>
                <tr><th>Tax</th><td>@(Model.Price * 0.2m)</td></tr>
                <tr><th>Category</th><td>@Model.CategoryId</td></tr>
                </tbody>
            </table>
        </div>
    </body>
</html>